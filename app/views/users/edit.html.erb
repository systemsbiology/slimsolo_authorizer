<h1>Editing User</h1>

<%= error_messages_for :user %>

<% form_for(@user) do |f| %>
  <p>
    <b>First Name</b><br />
    <%= f.text_field :firstname %>
  </p>

  <p>
    <b>Last Name</b><br />
    <%= f.text_field :lastname %>
  </p>

  <p>
    <b>Login</b><br />
    <%= f.text_field :login %>
  </p>

  <p>
    <b>E-mail</b><br />
    <%= f.text_field :email %>
  </p>

  <%= render :partial => "user_profiles/form", :locals => {:user_profile => @user_profile} %>
  
  <p>
    <%= f.submit "Update" %>
  </p>
<% end %>

<%= link_to 'Back', users_path %>
